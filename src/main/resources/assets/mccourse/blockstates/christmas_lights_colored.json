    { "when": { "down": true }, "apply": { "model": "mccourse:block/christmas_lights_colored", "uvlock": true, "x": 90 } },
    { "when": { "north": true }, "apply": { "model": "mccourse:block/christmas_lights_colored", "uvlock": true } },
    { "when": { "south": true }, "apply": { "model": "mccourse:block/christmas_lights_colored", "uvlock": true, "y": 180 } },
    { "when": { "east": true },  "apply": { "model": "mccourse:block/christmas_lights_colored", "uvlock": true, "y": 90 } },
    { "when": { "west": true },  "apply": { "model": "mccourse:block/christmas_lights_colored", "uvlock": true, "y": 270 } }
